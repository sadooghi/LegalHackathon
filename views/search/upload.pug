extends ../layout

block content
  .page-header
    h3 Upload a document

  form.form-horizontal(action='/search/upload' method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='name') Select a file (word, pdf, doc)
      .col-sm-8
        input.form-control(type='file', name='file', id='file', autofocus=true)
    .form-group
      .col-sm-offset-2.col-sm-8

        button.btn.btn-primary(type='submit' style={
        'background-color': '#1abc9c',
        'width': '25%',
        'border-color' : '#1abc9c'
        })
          | Send